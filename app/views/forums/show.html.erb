<%= render 'shared/navbar' %>
<h3><%= @forum.title %><h3>
<%= @forum.comment %>

<% if @posts %>
<br>
    <ul> 
        <% @posts.each do |post| %>
            <li>
            <%= User.find(post.user_id)%>
            <%= post.title %>
            <%= post.comment %>
            <%= post.updated_at %>
            </li>
        <% end %>
    </ul>
<% else %>
    <br>
    <p> まだエントリーがありません　</p>
<% end %>
<% render 'posts/new'%>
