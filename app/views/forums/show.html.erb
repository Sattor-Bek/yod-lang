<%= render 'shared/navbar' %>
<div class="post-container">
<h4 class="forum-title" style="text-align:center;"><%= @forum.title %><h4>
    <div class="post m-2">
        <p class="forum-comment"><%= @forum.comment %></p>
        <div class="post-user">
            <p class="forum-info"><%= Forum.find(params[:id]).user.user_name%> at <%= Forum.find(params[:id]).created_at %> </p>
        </div>        
    </div>
    <% if @posts %>
        <% @posts.each do |post| %>
            <div class="post m-2">
                <div class="post-title">
                    <p><%= post.title if post.title%><p>
                </div>
                <div class="post-comment">
                    <p><%= post.comment if post.comment %></p>
                </div>
                <div class="post-info">
                    <p><%= User.find(post.user_id).user_name%> at <%= post.updated_at %></p>
                </div>
                <div clas="post-icon mr-1">
                <i class="fas fa-trash"></i> <i class="fas fa-edit"><%= link_to edit_forum_post_path(@forum, post)%></i>
                </div>
            </div>
        <% end %>
    <% else %>
    <div class="post m-2">
        <p> まだエントリーがありません　</p>
    </div>
    <% end %>
    <div class="m-2" id="new-forum-btn">
        <%= link_to "新しい書き込み", new_forum_post_path(@forum, @post) %>
    </div>
</div>
